{
  "xsappname" : "capapp",
  "tenant-mode" : "dedicated",
  "scopes": [
    {
      "name" : "$XSAPPNAME.Viewer",
      "description" : "View data using this scope"
    },
    {
      "name" : "$XSAPPNAME.Admin",
      "description" : "CRUD data using this scope"
    }
  ],
  "attributes": [
    {
      "name" : "myCountry",
      "description" : "Country",
      "valueType" : "string"
    }
  ],
  "role-templates": [
    {
      "name" : "Viewer",
      "description" : "Viewer : Authorized to read all data",
      "default-role-name" : "Viewer : Authorized to read all data",
      "scope-references" : [
        "$XSAPPNAME.Viewer"
      ],
      "attribute-references":[
        {
          "name" : "myCountry"
        }
      ]
    },
    {
      "name" : "Admin",
      "description" : "Edit, Delete all data from service",
      "default-role-name" : "Edit, Delete all data from service",
      "scope-references" : [
        "$XSAPPNAME.Admin"
      ]
    }
  ],

  "authorities" : [
    "$ACCEPT_GRANTED_AUTHORITIES"
  ],
  "oauth2-configuration" : {
    "token-validity" : 9000,
    "redirect-uris" : [
      "https://*.cfapps.us10-001.hana.ondemand.com/login/callback"
    ]
  },
  "xsenableasynservice" : "true"
}
